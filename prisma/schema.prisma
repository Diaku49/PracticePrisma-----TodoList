generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native"]
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

enum Role {
  USER
  ADMIN
}

model ToDo {
  id      Int      @id @default(autoincrement())
  title   String
  image   String?
  user    User     @relation(fields: [userId], references: [id])
  userId  Int
  dueTime DateTime
}

model User {
  id          Int     @id @default(autoincrement())
  name        String
  email       String  @unique
  role        Role    @default(USER)
  tdl         ToDo[]
  accessToken String?
  password    String?

  @@index([email])
}
